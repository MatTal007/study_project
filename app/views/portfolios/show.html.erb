<%= image_tag @portfolio_item.main_image if !@portfolio_item.main_image.nil? %>
<h1><%= @portfolio_item.title %></h1>
<em><%= @portfolio_item.subtitle %></em>
<p><%= @portfolio_item.body %></p>
<h2>Technologies used:</h2>
  <% @portfolio_item.technology.each do |t| %>
    <p><%= t.name %></p>
  <% end %>
<p><%= link_to "Edit Item", edit_portfolio_path(@portfolio_item.id) %></p>
<p><%= link_to "Back", portfolios_path %></p>